<launch>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find icp_localization)/config/rviz.rviz" />

    <node name="tf_world" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 map world 10"/>

    <node name="map_pub" pkg="icp_localization" type="map_pub" output="screen"/>

    <node name="icp" pkg="icp_localization" type="icp" output="screen"/>

    <node name="write_csv" pkg="icp_localization" type="write_csv.py" output="screen"/>


	<arg name="path" default="/home/lct/nctu_sdc/localization_ws/" />
	<arg name="file" default="sdc_localization_1" />
	<node pkg="rosbag" type="play" name="player" output="screen" args="-d 15 -r 0.03 --clock $(arg path)$(arg file).bag "/>
</launch>

